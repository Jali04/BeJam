<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- SchÃ¶ne Suchleiste in CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Search for a track"
            android:inputType="text"
            android:background="@drawable/search_edittext_bg"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="#9986a7"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>

    <!-- Suchergebnisse: smooth herunterrollen -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/searchResultsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:visibility="gone"
        android:background="@drawable/search_results_bg"
        android:elevation="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:animateLayoutChanges="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>
    </androidx.core.widget.NestedScrollView>

    <!-- Feed Title -->
    <TextView
        android:id="@+id/feedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Posts"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        android:padding="12dp"
        android:background="#241e31"/>

    <!-- Feed of posts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

</LinearLayout>
